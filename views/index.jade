base_url="http://cogcomp.cs.illinois.edu/software/doc/apidocs/"
script(src='/javascripts/replace_content.js')
script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js')
  

block content
	div.container
		.container
			.row
				.col-md-10
					h2 Edison Search Interface
					#custom-search-input
						.input-group.col-md-10
							input#search.form-control.input-lg(type='text', placeholder='Keyword or Description')
							span.input-group-btn
								button.btn.btn-info.btn-lg(type='button')
									i.glyphicon.glyphicon-search
					.row
						.col-md-10
							table#table.table
								thead
									tr
										th Class Name
										th Description
										th Example
								tbody
								.col-md-6
								- var data2=data
								- var c=-1
								- for d in data
									- c= c+1
									- var e= d.testcode
									tr
										td
											a(href='#{d.javadoc_url}') #{d.name}	
										td(colspan="10")= d.description
										td
											
											button.btn.btn-info.btn-lg(type='button', data-toggle='modal', data-target='#myModal') Open Modal
											// Modal
											#myModal.modal.fade(role='dialog')
												.modal-dialog
												// Modal content
												.modal-content
												.modal-header
												button.close(type='button', data-dismiss='modal') Ã—
												h4.modal-title Modal Header
												.modal-body
												div(style="margin-top:40px")
												.div(class="panel-body-code")
													pre(style="margin:20px")
														code(class="language-clike")
														#{d.testcode}
												.modal-footer
												button.btn.btn-default(type='button', data-dismiss='modal') 
											Close
														
								.col-md-12
									.row
										h2 Sample Code
											.div(style="margin-top:40px")
												.div(class="panel-body-code")
													pre(style="margin:20px")
														code(class="language-clike")
														p#alert= "Sample Code goes here"
																			
								
